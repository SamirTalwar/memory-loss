{
  "name": "memory-loss",
  "version": "0.1.0",
  "description": "Persuades your browser to forget information after a while.",
  "author": "Samir Talwar <samir@noodlesandwich.com>",
  "homepage": "https://github.com/SamirTalwar/memory-loss#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/SamirTalwar/memory-loss.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "build/main.js",
  "scripts": {
    "build": "snowpack build",
    "lint": "tsc --noEmit && web-ext lint",
    "start": "./start.sh"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/selenium-webdriver": "^4.0.12",
    "fast-check": "^2.14.0",
    "jest": "^26.6.3",
    "selenium-webdriver": "^4.0.0-beta.2",
    "snowpack": "^3.2.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "web-ext": "^6.0.0",
    "webextension-polyfill-ts": "^0.25.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*_test.ts"
    ]
  },
  "webExt": {
    "verbose": true,
    "ignoreFiles": [
      "src",
      "out",
      "package-lock.json",
      "shell.nix",
      "snowpack.config.js",
      "start.sh"
    ]
  }
}
