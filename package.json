{
  "name": "memory-loss",
  "version": "0.1.0",
  "description": "Persuades your browser to forget information after a while.",
  "author": "Samir Talwar <samir@noodlesandwich.com>",
  "homepage": "https://github.com/SamirTalwar/memory-loss#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/SamirTalwar/memory-loss.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "build/main.js",
  "scripts": {
    "build": "snowpack build",
    "lint": "tsc --noEmit && web-ext lint",
    "start": "./start.sh"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "fast-check": "^2.14.0",
    "snowpack": "^3.2.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "web-ext": "^6.0.0",
    "webextension-polyfill-ts": "^0.25.0"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "test/**/*_test.ts"
    ],
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "webExt": {
    "verbose": true,
    "ignoreFiles": [
      "src",
      "out",
      "package-lock.json",
      "shell.nix",
      "snowpack.config.js",
      "start.sh"
    ]
  }
}
