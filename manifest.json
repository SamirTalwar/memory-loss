{
  "manifest_version": 2,

  "name": "Memory Loss",
  "version": "0.1",
  "description": "Persuades your browser to forget information after a while.",

  "permissions": [
    "*://*/*",
    "cookies",
    "privacy",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "memory-loss@noodlesandwich.com"
    }
  },

  "background": {
    "scripts": ["main.js"]
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "chrome_style": true
  }
}
